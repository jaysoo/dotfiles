<% @body_class = "quoting" %>
<% @page_title = s_("QUOTING_HDR|Quote") %>

<%= content_for :head do %>
  <%= stylesheet_link_tag "quoting/application", :media => "all" %>
  <%= javascript_include_tag 'desktop/app/quoting.app' %>
<% end %>

<script type="text/javascript" language="javascript">
  angular.element(document).ready(function() {
    var m = require("Quoting.ShowQuote")

    m.value("criticalErrorEl", $("#critical-error-overlay"))

    m.value("quoteStatuses", [
      {label: 'Active', value: 'active'},
      {label: 'Inactive', value: 'inactive'}
    ])

    m.value("quoteData", {
      customer: "Foo",
      item: "Japan Monster",
      effective_date: "2013-12-19",
      status: "active",
      quoter: "Some Guy"
    })

    angular.bootstrap(document, ["ShowQuote"])
  });
</script>

<%= content_for :content do %>
  <div ng-include="'quoting/show_quote'"></div>
<% end %>

