<div ng-controller="QuoteCtrl as quoteCtrl">
  <div ng-if="quoteCtrl.mode == 'show'">
    <div class="actions">
      <button ng-click="quoteCtrl.showEditForm()">
        [["QUOTING_LBL|Edit" | i18n]]
      </button>
    </div>
  </div>

  <div ng-if="quoteCtrl.mode == 'edit'">
    <div class="actions">
      <button ng-click="quoteCtrl.hideEditForm()">
        [["QUOTING_LBL|Edit" | i18n]]
      </button>

      <button ng-click="quoteCtrl.save()">
        [["QUOTING_LBL|Edit" | i18n]]
      </button>
    </div>
  </div>
</div>
