require.config({
  paths: {
    angular: '../bower_components/angular/angular'
  },

  shim: {
    angular: {
      exports: 'angular'
    }
  }
});

require(['angular', 'directives/doge'], function(angular) {
    'use strict';

    var m = angular.module('myModule', []);

    m.directive('dodge', require('directives/doge'));

    angular.bootstrap(document.body, [m.name]);
  }
);
