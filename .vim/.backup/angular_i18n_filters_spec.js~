describe("AngularI18n", function(){
  var filters = require("AngularI18nFilters")

  describe("formatNumber", function(){
    it("formats a number", function(){
      expect(filters.formatNumber(123)).toEqual("123.0")
    })

    it("uses -- when NaN", function(){
      expect(filters.formatNumber(NaN)).toEqual('--')
    })
  })

  describe("formatNumberLong", function(){
    it("formats a number", function(){
      expect(filters.formatNumber(123)).toEqual("123.00000")
    })

    it("uses -- when NaN", function(){
      expect(filters.formatNumber(NaN)).toEqual('--')
    })
  })
})
